<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="pack_track_unity">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>model.Bill</class>
        <class>model.Client</class>
        <class>model.Employee</class>
        <class>model.Product</class>
        <class>model.Sale</class>
        <class>model.SaleItem</class>
        <class>model.Supplier</class>
        <class>model.User</class>

        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:pack_track_database.db?foreign_keys=true" />
            <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC" />
            <property name="hibernate.dialect" value="org.hibernate.community.dialect.SQLiteDialect" />

            <property name="jakarta.persistence.validation.mode" value="none" />

            <property name="hibernate.show_sql" value="true" />

            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>
    </persistence-unit>
</persistence>