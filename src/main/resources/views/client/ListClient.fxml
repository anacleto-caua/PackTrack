<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Button?>
<VBox fx:id="rootPane" alignment="TOP_CENTER" maxHeight="Infinity" maxWidth="Infinity" minHeight="500.0" minWidth="600.0" prefHeight="500.0" prefWidth="600.0" spacing="15.0" style="-fx-background-color: white;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.client.ClientListController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <VBox>
                    <children>
                        <Label text="Lista de Clientes Cadastrados" textFill="#2d6a4f">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label text="Visualização de todos os clientes no sistema." textFill="#888888">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="btnNewClient" mnemonicParsing="false" onAction="#openCreationModal" style="-fx-background-color: #2d6a4f; -fx-text-fill: white; -fx-cursor: hand;" text="+ Novo Cliente">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                </Button>
            </children>
        </HBox>

        <!-- Tabela de clientes -->
        <TableView fx:id="clientTable" VBox.vgrow="ALWAYS" maxWidth="Infinity" />

    </children>
</VBox>
