<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="Infinity" maxWidth="Infinity" minHeight="500.0" minWidth="600.0" prefHeight="500.0" prefWidth="600.0" spacing="15.0" style="-fx-background-color: white;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.EmployeeListController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Lista de Funcionários Cadastrados" textFill="#2d6a4f">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Visualização de todos os funcionários no sistema." textFill="#888888">
            <font>
                <Font size="14.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>

        <TableView fx:id="employeeTable" VBox.vgrow="ALWAYS" maxWidth="Infinity" />

    </children>
</VBox>